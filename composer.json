{
  "name": "hhpack/codegen",
  "type": "library",
  "keywords": [ "hack", "hhvm", "package", "generator" ],
  "description": "Library code generator for Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "bin": [
    "bin/codegen"
  ],
  "require": {
    "hhvm": ">=3.21.0",
    "hhvm/hhvm-autoload": "^1.5",
    "facebook/hack-codegen": "^3.0",
    "hhpack/getopt": "^1.4.0",
    "facebook/definition-finder": "^2.1",
    "hhvm/type-assert": "^3.2",
    "hhvm/hsl": "^3.27"
  },
  "require-dev": {
    "hhvm/hacktest": "^1.1",
    "facebook/fbexpect": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Codegen\\": "src"
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "test": "vendor/bin/hacktest test",
    "check:init": "touch .hhconfig"
  }
